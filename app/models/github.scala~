package models.github

import scala.concurrent.Future
import scala.concurrent.future
import play.api.libs.concurrent.execution.defaultContext

trait GitHubAPI {
  def searchBySkills(skills: String*): Future[Set[GitHubUser]]
  def repositories(userID: String): Future[Set[Repository]]
}

object DftGitHubAPI extends GitHubAPI {
  def searchBySkills(skills: String*): Future[Set[GitHubUser]] = future(Set(GitHubUser()))
  def repositories(userID: String): Future[Set[Repository]] = future(Set(Repository()))
}

case class GitHubUser()
case class Repository()
