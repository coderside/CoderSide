package actors

import akka.actor.{ Actor, ActorRef, Props, ActorLogging }
import scala.concurrent.util.duration._

class HeadNode() extends Actor with ActorLogging {
  import NodeSupervisor.Query

  def gitHubNode = context.actorOf(Props[GitHubNode])

  def receive = {
    case Query(gitHubUsers) => println(gitHubUsers)
  }

  override def preStart() = {
    log.debug("[HeadNode] before starting...")
  }

  override def postStop() = {
    log.debug("[HeadNode] after stopping...")
  }
}
